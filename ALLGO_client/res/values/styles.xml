<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        All customizations that are NOT specific to a particular API-level can go here.
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
    </style>

    <style name="MyActionBarTabs" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>
    
    <style name="AppTheme.DialogWhenLarge" parent="android:Theme.Holo.Light.DialogWhenLarge">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <!-- <style name="AppTheme.DarkActionBar" parent="android:Theme.Holo.Light.DarkActionBar">
        All customizations that are NOT specific to a particular API-level can go here.
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionBarTabTextStyle">@android:style/Widget.Holo.Light.ActionBar.TabText</item>
    </style> -->
    
    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:icon">@drawable/ic_launcher_bar</item>
        <item name="android:background">#f4842d</item>
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>
    </style>
    
    <style name="AcBar_titleStyle">
        <item name="android:textColor">#FFFFFF</item>  
    </style>
    
    <style name="ButtonBarButton" parent="@android:style/Widget.Holo.Button.Borderless">
    <item name="android:textColor">@android:color/primary_text_light</item>
	</style>

	<style name="ButtonBar" parent="@android:style/Holo.Light.ButtonBar.AlertDialog">
	</style>
    
</resources>
